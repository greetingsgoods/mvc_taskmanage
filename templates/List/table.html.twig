<div class="row">
    <table class="table-bordered table-striped table">
        <tbody>
        <tr>
            <th> ID задачи
            </th>
            <th> Имя
            </th>
            <th> Email
            </th>
            <th>Описание</th>
            <th> Статус
            </th>
            <th>Категория</th>
        </tr>


        {% for task in tasks %}
            <tr>
                <td>{{ task.id }}</td>
                <td>{{ task.username }}</td>
                <td>{{ task.email }}</td>
                <td>{{ task.text }} </td>
                <td>{{ task.taskend }}</td>
                {% if is_admin == true %}
                    <form action="edit.php" method="post">
                        <div class="form-group">
                            <label for="status">Выполнено</label>
                            <input type="checkbox" id="status" name="taskend" value="1">
                        </div>
                        <div class="form-group">
                            <input type="hidden" name="task_id" value="{{ task.id }}">
                            <button type="submit" class="btn btn-default">Редактировать</button>
                        </div>
                    </form>
                {% endif %}
                <td></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
<ul class="pagination">
    {% for query in queries %}
        <li><a href="?{{ query }}" class="inline-block"> {{ loop.index }} </a></li>
    {% endfor %}
</ul>
